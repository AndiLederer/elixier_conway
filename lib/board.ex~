defmodule Board do
  @doc """
  Erstellt eine Liste von Tuples {1,[]}
  """
  def create_board(length, height) do
    create_row(length,height-1)
  end

  defp create_row(length,height) do
    create_row(length,height-1,[{height,create_row_position(length-1,[])}])
  end

  defp create_row(length,0,list) do
    [{0,create_row_position(length-1,[])}|list]
  end

  defp create_row(length,height,list) do
    new_list = [{height,create_row_position(length-1,[])}|list]
    create_row(length,height-1,new_list)
  end

  defp create_row_position(0,list) do
    [0|list]
  end

  defp create_row_position(length,list) do
    create_row_position(length-1,[length|list])
  end
end